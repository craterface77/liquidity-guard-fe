# WalletConnect configuration (required)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Backend API base URL (defaults to https://api.liq-guard.io if omitted)
NEXT_PUBLIC_API_BASE_URL=https://api.liq-guard.io

# Core LiquidityGuard contracts
NEXT_PUBLIC_RESERVE_POOL_ADDRESS=0xReservePoolAddress
NEXT_PUBLIC_POLICY_DISTRIBUTOR_ADDRESS=0xPolicyDistributorAddress
NEXT_PUBLIC_USDC_ADDRESS=0xUSDCAddress

# Optional overrides (frontend will fetch when absent)
NEXT_PUBLIC_LGUSD_ADDRESS=0xLgUSDAddress
NEXT_PUBLIC_CHAIN_ID=11155111
NEXT_PUBLIC_CURVE_LP_ADDRESS=0xCurveLpToken

# Aave liquidation protection configuration (set when enabling AAVE_DLP listing)
NEXT_PUBLIC_AAVE_LENDING_POOL_ADDRESS=0xAaveLendingPool
NEXT_PUBLIC_AAVE_COLLATERAL_ADDRESS=0xCollateralAsset
NEXT_PUBLIC_AAVE_CHAIN_ID=11155111
